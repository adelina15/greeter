<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NameStyle">
        <item name="android:layout_marginLeft">@dimen/layout_margin</item>
        <item name="android:layout_marginTop">@dimen/layout_margin</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="ButtonStyle">
        <item name="backgroundTint">@color/grey</item>
        <item name="android:layout_marginRight">@dimen/layout_margin</item>
        <item name="android:layout_marginTop">@dimen/layout_margin</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="GreetingStyle">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:layout_marginTop">@dimen/margin_big</item>
        <item name="android:textColor">@color/pink</item>
    </style>
</resources>